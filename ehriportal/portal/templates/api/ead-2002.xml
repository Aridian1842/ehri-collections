{% load portal_tags %}
<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE ead PUBLIC "+//ISBN 1-931666-00-8//DTD ead.dtd (Encoded Archival Description (EAD) Version 2002)//EN" "http://lcweb2.loc.gov/xmlcommon/dtds/ead2002/ead.dtd">

<ead>
<eadheader langencoding="iso639-2b" countryencoding="iso3166-1" dateencoding="iso8601" repositoryencoding="iso15511" scriptencoding="iso15924" relatedencoding="DC">
    <eadid mainagencycode="{{object.repository.identifier}}"
        url="{{object.api_uri}}?sf_format=ead"
        encodinganalog="Identifier">{{object.identifier}}</eadid>  <filedesc>
    <titlestmt>
        <titleproper encodinganalog="Title">{{object.name}}</titleproper>
        {% if object.creator %}
            <author encodinganalog="Creator">{{ object.creator.name }}</author>
        {% elif object.archivist_note %}
            <author encodinganalog="Creator">{{ object.archivist_note }}</author>
        {% endif %}
    </titlestmt>
    <publicationstmt>
        {% with object.repository.primary_contact as object %}
        {% include "api/_ead-2002_repository_address.xml" with object=contact %}
        {% endwith %}
        <publisher encodinganalog="Publisher">{{object.repository.name}}</publisher>
        <date normal="2012-01-12" encodinganalog="Date">{{object.created_on|date:"r"}}</date>
    </publicationstmt>  </filedesc>
  <profiledesc>
    <creation>
      Generated by EHRI Prototype Test
      <date normal="{%now "Y m d"%}">{% now "r" %}</date>
    </creation>
    <langusage>
        {% for lang in object.languages_of_description %}
        <!-- FIXME: This langcode should be in 3-character format. -->
        <language langcode="{{lang}}"
            encodinganalog="Language">{{lang|langcode2name}}</language>
        {% endfor %}
    </langusage>
    <descrules encodinganalog="3.7.2">Compiled in compliance with General International Standard Archival Description, ISAD(G), second edition, 2000; National Council on Archives Rules for the Construction of Personal, Place and Corporate Names, 1997.</descrules>
  </profiledesc>
</eadheader>
<!-- TODO <frontmatter/> -->
<archdesc level="collection" relatedencoding="ISAD(G)v2">
  <did>
      <unittitle encodinganalog="3.1.2">{{object.name}}</unittitle>
      <unitid repositorycode="{{object.repository.identifier}}"
          encodinganalog="3.1.1">{{object.repository.identifier}} {{object.identifier}}</unitid>
    <unitdate datechar="creation" normal="1938-1-1/1945-1-1" encodinganalog="3.1.3">1938-1-1 - 1945-1-1</unitdate>
    <physdesc>
        <extent encodinganalog="3.1.5">{{object.extent_and_medium}}</extent>
    </physdesc>
    <repository>
        <corpname>{{object.repository.name}}</corpname>
        {% with object.repository.primary_contact as object %}
        {% include "api/_ead-2002_repository_address.xml" with object=contact %}
        {% endwith %}
    </repository>
    <langmaterial encodinganalog="3.4.3">
        {% for lang in object.language %}
            <!-- FIXME: Should be 3-char code -->
            <language langcode="{{lang}}">{{lang|langcode2name}}</language>
        {% endfor %}
  </langmaterial>  </did>
  <scopecontent encodinganalog="3.3.1">
      <p>{{object.scope_and_content}}</p>
  </scopecontent>
  <arrangement encodinganalog="3.3.4">
      <p>{{object.arrangement}}</p>
  </arrangement>
  <acqinfo encodinganalog="3.2.4">
      <p>{{object.sources}}</p>
  </acqinfo>
  <processinfo>
      <p>{{object.archival_history}}</p>
  </processinfo>
  <altformavail encodinganalog="3.5.2">
      <p>Wiener Library</p>
  </altformavail>
  <accessrestrict encodinganalog="3.4.1">
      <p>Open</p>
  </accessrestrict>
  <userestrict encodinganalog="3.4.2">
      <p>{{object.reproduction_conditions}}</p>
  </userestrict>
  <otherfindaid encodinganalog="3.4.5">
      <p>{{object.finding_aids}}</p>
  </otherfindaid>
  <dsc type="combined">
  </dsc>
</archdesc>
</ead>
